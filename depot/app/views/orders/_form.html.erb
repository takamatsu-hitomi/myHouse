<%= form_for(@order) do |form| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= raw t('errors.template.header', count: @order.errors.count,
      model: t('activrecord.models.order')) %>.</h2>
      <p><%= t('errors.template.body')%></p>
      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= raw message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br />
    <%= form.text_field :name, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :address, t('.address_html') %><br />
    <%= form.text_area :address, rows: 3, cols: 40 %>
  </div>

  <div class="field">
    <%= form.label :email %><br />
    <%= form.email_field :email, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :pay_type %><br />
    <%= form.select :pay_type, Order::PAYMENT_TYPES,
      prompt: t('.pay_prompt_html') %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit') %>
  </div>
<% end %>
